
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/content/MeuCss.css" rel="stylesheet" type="text/css">
<div class="row">
    <h2>USUÁRIOS</h2>
    <div class="col-md-8">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box red">
            <div class="portlet-title">
                <div class="caption" col-md-12>
                    <i class="fa fa-cogs"></i> Lista de Usuários
                </div>
                <div class="actions">
                    <a href="javascript:;" class="btn btn-default btn-sm" id="botao-add-usuarios">
                        <i class="fa fa-plus"></i> Add
                    </a>
                </div>
            </div>
            <div class="portlet-body col-md-12">

                <div class="table-scrollable">
                    <table id="gridUsuarios" class="table table-hover">
                        <thead class="">
                            <tr>
                                <th class="col-md-1">#</th>
                                <th class="col-md-2">Id</th>
                                <th class="col-md-12 col-md-offset-2">Login</th>
                                <th class="col-md-12 col-md-offset-8">Status</th>
                                <th class="col-md-10 col-md-offset-12">
                                    <a></a>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="">
                            @foreach (var usuario in ViewBag.usuarios)
                            {
                                <tr data-id="@usuario.ID" data-login="@usuario.Login" data-senha="@usuario.Senha" data-status="@usuario.Status">
                                    <td class="usuario@(usuario.ID)">
                                        <a href="@Url.Action("Remover","Usuario", new { id = usuario.ID})" class="botao-remove-usuario"><i class="fa fa-minus-circle font-red"></i></a>
                                    </td>
                                    <td class="usuario@(usuario.ID)">@usuario.ID</td>
                                    <td class="usuario@(usuario.ID)">@usuario.Login</td>
                                    <td class="usuario@(usuario.ID)">@usuario.Status</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 offset-md-8" id="forms-updates-usuario">
        <div class="portlet box purple">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Cadastro de Usuarios
                </div>
            </div>
            <div class="portlet-body form">

                <form id="form-cadastro-usuario" action="/Usuario/Adiciona" method="post">
                    <div class="form-body">
                        <div class="form-group">
                            <input class="id-secreto" style="display:none;" name="usuario.ID">
                            <label class="control-label">Login</label>
                            <input type="text" name="usuario.Login" class="form-control login-alterar" placeholder="Login do Usuario">
                            <label class="control-label">Senha</label>
                            <input type="password" name="usuario.Senha" class="form-control senha-alterar" placeholder="Senha do Usuario">
                            <label class="control-label">Status</label>
                            <select name="usuario.Status" class="status-alterar">
                                @foreach (var status in ViewBag.status) {
                                    <option value="@status">@status</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-actions right">
                        <button type="submit" class="btn green">Salvar</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
<script src="~/content/scripts/Usuario.js"></script>
