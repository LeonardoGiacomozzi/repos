
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="portlet box red">
        <div class="portlet-title">
            <div class="caption" col-md-12>
                <i class="fa fa-cogs"></i> Lista Imóveis
            </div>
            
        </div>
        <div class="portlet-body col-md-12">

            <div class="table-scrollable">
                <table id="gridPaises" class="table table-hover">
                    <thead class="">
                        <tr>
                            <th class="col-md-1">#</th>
                            <th class="col-md-2">Código</th>
                            <th class="col-md-3 ">Descrição</th>
                            <th class="col-md-1 col-md-offset-8">Tipo</th>
                            <th class="col-md-10 col-md-offset-12">
                                <a></a>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="">
                        @foreach (var imovel in ViewBag.imoveis)
                        {
                            <tr data-id="@imovel.ID" >
                                <td class="imovel@(imovel.ID)">
                                    <a href="@Url.Action("Remover","Imoveis", new { id = imovel.ID })" class="botao-remove-imovel"><i class="fa fa-minus-circle font-red"></i></a>
                                    <a href="@Url.Action("Form","Imoveis", new { id = imovel.ID })" class="botao-edita-imovel"><i class="fa fa-edit font-blue"></i></a>
                                </td>
                                <td class="imovel@(imovel.ID)">@imovel.ID</td>
                                <td class="imovel@(imovel.ID)">@imovel.DescricaoBreve</td>
                                <td class="imovel@(imovel.ID)">@imovel.TipoNegocio</td>
                                <td><a></a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div> 

