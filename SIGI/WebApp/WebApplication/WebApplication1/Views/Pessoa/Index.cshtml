        <div class="portlet box purple">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Cadastro de Pessoa 
                </div>
            </div>
            <div class="portlet-body form">

                <form id="form-cadastro-Pessoa" action="/PessoaFisica/Adiciona" method="post">
                    <div class="form-body">
                        <div class="form-group">
                            <input class="id-secreto" style="display:none;" name="pessoa.ID">
                            <label class="control-label">Tipo</label>
                            <select name="pessoa.TipoPessoa" class="pessoa-alterar">
                                @foreach (var tipo in ViewBag.pessoatipo)
                                {
                                    <option value="@tipo">
                                        @tipo
                                    </option>
                                }
                            </select><br>
                            <label class="control-label">Nome</label>
                            <input type="text" name="pessoa.Nome" class="form-control nome-alterar" placeholder="Nome Da Pessoa">
                            <label class="control-label pessoaFisica" style="display:block;">CPF</label>
                            <input type="text" name="pessoa.Cpf" style="display:block;" class="form-control cpf-alterar pessoaFisica" placeholder="CPF">
                            <label class="control-label pessoaJuridica" style="display:none;" >CNPJ</label>
                            <input type="text" name="pessoa.Cnpj" style="display:none;" class="form-control cnpj-alterar pessoaJuridica" placeholder="CNPJ">
                            <label class="control-label pessoaFisica">RG</label>
                            <input type="text" name="pessoa.Rg" class="form-control rg-alterar pessoaFisica" placeholder="RG">
                            <label class="control-label">Tipo De Pessoa</label>
                            <select name="pessoa.ETipo" class="etipo-alterar-PF">
                                @foreach (var tipo in ViewBag.tipoPessoa)
                                {
                                    <option value="@tipo">
                                        @tipo
                                    </option>
                                }
                            </select><br>
                            <label class="control-label">Inscrição Municipal</label>
                            <input type="text" name="pessoa.InscricaoMunicipal" class="form-control im-alterar" placeholder="Numero Da Inscrição">
                            <label class="control-label">Inscrição Estadual</label>
                            <input type="text" name="pessoa.InscricaoEstadual" class="form-control ie-alterar" placeholder="Numero Da Inscrição">
                            <label class="control-label pessoaFisica" style="display:block;">Profissão</label>
                            <input type="text" name="pessoa.Profissao" style="display:block;" class="form-control prof-alterar pessoaFisica" placeholder="Informe a profissão exercida">
                            <label class="control-label pessoaFisica" style="display:block;">Nacionalidade</label>
                            <input type="text" name="pessoa.Nacionalidade" style="display:block;"class="form-control nascio-alterar pessoaFisica" placeholder="Informe Pais de origem">
                            <label class="control-label pessoaFisica" style="display:block;">Estado Civil</label>
                            <select name="pessoa.EEstadoCivil" style="display:block;"class="ec-alterar-PF pessoaFisica">
                                @foreach (var estado in ViewBag.estadoCivil)
                                {
                                    <option value="@estado">
                                        @estado
                                    </option>
                                }
                            </select><br>
                           
                            <label class="control-label">Email</label>
                            <input type="email" name="pessoa.EmailPrincipal" class="form-control email-alterar" placeholder="exemplo@exwmplo.com">
                            <label class="control-label pessoaJuridica" style="display:none;">Web Site</label>
                            <input type="text" name="pessoa.WebSite" style="display:none;" class="form-control web-alterar pessoaJuridica" placeholder="Web Site da empresa">
                            <label class="control-label">Observações</label>
                            <input type="text" name="pessoa.Observacao" class="form-control obs-alterar" placeholder="Algumas Observações ">
                            <label class="control-label">Endereço</label>
                            <select name="pessoa.EnderecoID" class="endereco-alterar">
                                @foreach (var endereco in ViewBag.enderecos)
                                {
                                    <option value="@endereco.ID">
                                        @endereco.Rua
                                    </option>
                                }
                            </select><br>
                            <label class="control-label">Telefone</label>
                            <input type="text" name="pessoa.Telefone" class="form-control tel-alterar" placeholder="ddd-0000-0000">
                            <label class="control-label">Celular</label>
                            <input type="text" name="pessoa.Celular" class="form-control cell-alterar" placeholder="ddd-000-000-000">
                        </div>
                    </div>
                    <div class="form-actions right">
                        <button type="submit" class="btn green">Salvar</button>
                    </div>
                </form>

            </div>
