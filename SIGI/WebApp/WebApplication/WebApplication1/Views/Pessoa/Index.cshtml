}

<link href="~/content/MeuCss.css" rel="stylesheet" type="text/css">
<div class="row">
    <h2>Pessoa </h2>
    <div class="col-md-8">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box red">
            <div class="portlet-title">
                <div class="caption" col-md-12>
                    <i class="fa fa-cogs"></i> Lista de Pessoas 
                </div>
                <div class="actions">
                    <a href="javascript:;" class="btn btn-default btn-sm" id="botao-add-pessoa">
                        <i class="fa fa-plus"></i> Add
                    </a>
                </div>
            </div>
            <div class="portlet-body col-md-12">

                <div class="table-scrollable">
                    <table id="gridPessoa" class="table table-hover">
                        <thead class="">
                            <tr>
                                <th class="col-md-1">#</th>
                                <th class="col-md-8">Id</th>
                                <th class="col-md-12 col-md-offset-8">Nome</th>
                                <th class="col-md-12 col-md-offset-8">Função</th>
                                <th class="col-md-12 col-md-offset-8">Tipo</th>
                                <th class="col-md-10 col-md-offset-12">
                                    <a></a>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="">
                            @foreach (var pessoa in ViewBag.pessoa)
                            {
                                <tr data-id="@pessoa.ID" data-nome="@pessoa.Nome" data-cpf="@pessoa.Cpf" data-cnpj="@pessoa.Cnpj" data-tipo="@pessoa.ETipo" data-prof="@pessoa.Profissao"
                                    data-nacionalidade="@pessoa.Nacionalidade" data-im="@pessoa.InscricaoMunicipal" data-ie="@pessoa.InscricaoEstadual" data-rg="@pessoa.Rg"
                                    data-email="@pessoa.EmailPrincipal" data-obs="@pessoa.Observacao" data-endereco="@pessoa.EnderecoID"
                                    data-tel="@pessoa.Telefone" data-cell="@pessoa.Celular" data-ec="@pessoa.EEstadoCivil" data-web="@pessoa.WebSite" data-pessoaTipo="@pessoa.TipoPessoa">
                                    <td class="pessoa@(pessoa.ID)">
                                        <a href="@Url.Action("Remover","PessoaFisica", new { id = pessoa.ID })" class="botao-remove-PF"><i class="fa fa-minus-circle font-red"></i></a>
                                    </td>
                                    <td class="pessoaF@pessoa.ID)">@pessoa.ID</td>
                                    <td class="pessoaF@(pessoa.ID)">@pessoa.Nome</td>
                                    <td class="pessoaF@(pessoa.ID)">@pessoa.ETipo</td>
                                    <td class="pessoaF@(pessoa.ID)">@pessoa.TipoPessoa</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
