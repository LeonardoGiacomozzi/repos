
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Selecionar</title>
</head>
<body>
    <div>

        <h2>Remover Pais</h2>
        <form action="/Paises/Remover" method="post">
            <select  name="id">

                @foreach (var item in ViewBag.paises)
                {

                    <option value="@item.Id">
                        @item.Nome
                    </option>

                }

            </select>

            <input type="submit" value="Deletar" />

        </form>
    </div>

    <div>

        <h2>Alterar Pais</h2>
        <form action="/Paises/Alterar" method="post">
            <select name="id">

                @foreach (var item in ViewBag.paises)
                {

                    <option value="@item.Id">
                        @item.Nome
                    </option>

                }

            </select>

            <label for="novoNome">Novo Nome</label>
            <input id="novoNome" name="nome" />

            <input type="submit" value="Alterar" />

        </form>
    </div>
</body>
</html>
