
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Atendimento</h2>

<div class="col-md-4 offset-md-8" id="forms-atendimento">
    <div>
        <div class="portlet box purple">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Editar
                </div>
            </div>
            <div class="portlet-body form">

                <form id="form-editor-atendimento" action="/Atendimento/Adicionar" method="post"
                      data-funcionario="@ViewBag.atendimento.FuncionarioID" data-cliente="@ViewBag.atendimento.ClienteID">
                    <div class="form-body">
                        <div class="form-group">
                            <input class="id-secreto" style="display:none;" name="atendimento.ID" value="@ViewBag.atendimento.ID">

                            <label class=" control-label">Titulo Do Atendimento</label>
                            <input class="titulo-alter" name="atendimento.Nome" value="@ViewBag.atendimento.Nome">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Funcionario</label>
                            <select name="atendimento.FuncionarioID" id="selec-funcionario">
                                @foreach (var funcionario in ViewBag.funcionarios)
                                {
                                    <option value="@funcionario.ID">
                                        @funcionario.Nome
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Cliente</label>
                            <select name="atendimento.ClienteID" id="selec-cliente">
                                @foreach (var cliente in ViewBag.clientes)
                                {
                                    <option value="@cliente.ID">
                                        @cliente.Nome
                                    </option>
                                }
                            </select>
                            <a href="@Url.Action("Index","Pessoa")">Cadastrar Cliente</a>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Relatório do atendimento</label>
                            <textarea name="atendimento.Relatorio" style="width:95%;height:90px;">@ViewBag.atendimento.Relatorio</textarea>

                            <input class="resultado" style="display:none;" name="atendimento.Resultado" value="Convertido">
                        </div>
                    </div>
                    <div class="form-actions right">
                        <button type="submit" class="btn green">Salvar</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
<script src="~/content/scripts/AtendimentoSimples.js"></script>